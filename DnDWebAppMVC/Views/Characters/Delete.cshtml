@model DnDWebAppMVC.Models.Character

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete @Model.Name?</h3>
<div>
    <div id="header" class="row mb-2 justify-content-around parchment-light">
        <div class="col-4">
            <h5 class="pt-1">
                @Html.DisplayNameFor(model => model.Class) -
                @Html.DisplayFor(model => model.Class)
            </h5>
        </div>
        <div class="col-2">
            <h5 class="pt-1">
                @Html.DisplayNameFor(model => model.Level) -
                @Html.DisplayFor(model => model.Level)
            </h5>
        </div>
        <div class="col-4">
            <h5 class="pt-1">
                @Html.DisplayNameFor(model => model.Race) -
                @Html.DisplayFor(model => model.Race)
            </h5>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

<style>
    .parchment-light {
        background-color: lightgreen;
        border-radius: 10px;
    }
</style>